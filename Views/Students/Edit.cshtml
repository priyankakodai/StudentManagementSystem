@model StudentWebApp.Models.Student

<h2>Edit Student</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Class"></label>
        <input asp-for="Class" class="form-control" />
        <span asp-validation-for="Class" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Section"></label>
        <input asp-for="Section" class="form-control" />
        <span asp-validation-for="Section" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClassTechName"></label>
        <input asp-for="ClassTechName" class="form-control" />
        <span asp-validation-for="ClassTechName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mobile"></label>
        <input asp-for="Mobile" class="form-control" />
        <span asp-validation-for="Mobile" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-success">Update</button>
    <a href="/Students" class="btn btn-secondary">Back to List</a>
</form>
