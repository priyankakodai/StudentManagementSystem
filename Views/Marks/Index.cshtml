@model IEnumerable<StudentWebApp.Models.Marks>

<div class="container py-5">

    <div class="card shadow-lg border-0 rounded-4">
        
        <div class="card-header text-white py-4"
             style="background: linear-gradient(135deg, #0052ff, #8f00ff);">
            <h2 class="fw-bold text-center mb-0">Student Marks List</h2>
        </div>

        <div class="card-body p-4 bg-light">

            <div class="mb-4 text-end">
                <a asp-action="Create" class="btn btn-success btn-lg px-4 rounded-pill shadow-sm">
                    + Add Marks
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle rounded-3 overflow-hidden">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Student ID</th>
                            <th>Tamil</th>
                            <th>English</th</th>
                            <th>Maths</th>
                            <th>Science</th>
                            <th>Social</th>
                            <th>Total</th>
                            <th style="width: 200px;">Actions</th>
                        </tr>
                    </thead>

                    <tbody class="text-center">
                        @foreach (var item in Model)
                        {
                            <tr class="bg-white">
                                <td class="fw-bold">@item.StudentId</td>

                                <td><span class="badge bg-primary fs-6 px-3">@item.Tamil</span></td>
                                <td><span class="badge bg-secondary fs-6 px-3">@item.English</span></td>
                                <td><span class="badge bg-info text-dark fs-6 px-3">@item.Maths</span></td>
                                <td><span class="badge bg-warning text-dark fs-6 px-3">@item.Science</span></td>
                                <td><span class="badge bg-success fs-6 px-3">@item.Social</span></td>

                                <td>
                                    @if (item.Total.HasValue)
                                    {
                                        <span class="badge bg-dark fs-6 px-3">@item.Total</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>

                                <td>
                                    <div class="d-flex justify-content-center gap-2">

                                        <!-- Calculate Button -->
                                        <form asp-action="CalculateMarks" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-primary btn-sm px-3">
                                                Calculate
                                            </button>
                                        </form>

                                        <!-- Delete Button -->
                                        <form asp-action="Delete" method="post" 
                                              onsubmit="return confirm('Are you sure you want to delete this?');">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm px-3">
                                                Delete
                                            </button>
                                        </form>

                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>

</div>
