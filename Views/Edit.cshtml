@model StudentWebApp.Models.Student

<h2>Edit Student</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Class" class="form-label"></label>
        <input asp-for="Class" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Section" class="form-label"></label>
        <input asp-for="Section" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="ClassTechName" class="form-label"></label>
        <input asp-for="ClassTechName" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Mobile" class="form-label"></label>
        <input asp-for="Mobile" class="form-control" />
    </div>



    <button class="btn btn-warning">Update</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
