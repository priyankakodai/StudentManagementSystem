@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

<style>
    .hero-container {
        background: rgba(255,255,255,0.12);
        backdrop-filter: blur(15px);
        border-radius: 25px;
        padding: 60px 40px;
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
        color: #fff;
        box-shadow: 0 15px 40px rgba(0,0,0,0.20);
        transition: transform 0.3s ease;
    }

        .hero-container:hover {
            transform: translateY(-4px);
        }

    .hero-title {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 20px;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.4);
    }

    .hero-text {
        font-size: 1.2rem;
        margin-bottom: 45px;
        color: #eaeaff;
        line-height: 1.6;
    }

    .btn-custom {
        font-size: 1.1rem;
        font-weight: 600;
        padding: 15px 38px;
        border-radius: 12px;
        margin: 12px;
        border: none;
        transition: all 0.3s ease;
        box-shadow: 0 6px 15px rgba(0,0,0,0.25);
        color: #fff !important;
    }

    .btn-primary-custom {
        background: linear-gradient(45deg, #ff416c, #ff4b2b);
    }

        .btn-primary-custom:hover {
            transform: scale(1.07);
            box-shadow: 0 0 18px rgba(255,65,108,0.6);
        }

    .btn-secondary-custom {
        background: linear-gradient(45deg, #00c6ff, #0072ff);
    }

        .btn-secondary-custom:hover {
            transform: scale(1.07);
            box-shadow: 0 0 18px rgba(0,198,255,0.6);
        }

    .hero-link {
        color: #ffd700;
        font-weight: 500;
        text-decoration: underline;
    }

        .hero-link:hover {
            color: #ffffff;
            text-decoration: none;
        }
</style>

<div class="hero-container">
    <h1 class="hero-title">Welcome to Student Management System</h1>

    <p class="hero-text">
        Efficiently manage your students, marks, attendance, and more—all in one place.<br />
        Learn more about
        <a href="https://learn.microsoft.com/aspnet/core" target="_blank" class="hero-link">
            ASP.NET Core Web Apps
        </a>.
    </p>

    <div>
        <a asp-controller="Students" asp-action="Create" class="btn btn-custom btn-primary-custom">
            <i class="bi bi-person-plus-fill me-2"></i> Student Register
        </a>

        <a asp-controller="Marks" asp-action="Create" class="btn btn-custom btn-secondary-custom">
            <i class="bi bi-journal-text me-2"></i> Marks
        </a>
    </div>
</div>
